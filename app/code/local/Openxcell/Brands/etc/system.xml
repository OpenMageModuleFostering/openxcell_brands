<?xml version="1.0"?>
<config>
    <tabs>
        <brands translate="label" module="brands">
            <label>Openxcell Extensions</label>
            <sort_order>300</sort_order>
        </brands>
    </tabs>
    <sections>
        <brands translate="label" module="brands">
            <class>separator-top</class>
            <label>Brands Configurations</label>
            <tab>brands</tab>
            <frontend_type>text</frontend_type>
            <sort_order>40</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <frontend translate="label">
                    <label>Size Configurations</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <brand_height translate="label comment">
                            <label>Height</label>
                            <comment>In Pixels. Please enter digits only. Eg: 140, not 140PX</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </brand_height>
                        <brand_width translate="label comment">
                            <label>Width</label>
                            <comment>In Pixels. Please enter digits only. Eg: 140, not 140PX</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </brand_width>
                        <!--<brand_place translate="label">
                            <label>Display In</label>
                            <comment>In which block you want to show the Brand Slider?</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>brands/options</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </brand_place>-->
                    </fields>
                </frontend>
            </groups>
        </brands>
    </sections>
</config>